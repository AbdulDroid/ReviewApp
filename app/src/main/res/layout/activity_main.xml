<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/full_name"
        style="@style/TextAppearanceTextView"
        android:text="@string/full_name_abdulrahman_abdulkarim"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/email_ads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/TextAppearanceTextView"
        android:id="@+id/email_ads"
        android:text="@string/email_address_olanre12waju_gmail_com"
        app:layout_constraintBottom_toTopOf="@+id/slack_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name"/>

    <TextView
        android:id="@+id/slack_username"
        style="@style/TextAppearanceTextView"
        android:text="@string/slack_userame_abdul"
        app:layout_constraintBottom_toTopOf="@+id/tracks"
        app:layout_constraintTop_toBottomOf="@+id/email_ads"/>

    <TextView
        android:id="@+id/tracks"
        style="@style/TextAppearanceTextView"
        android:text="@string/tracks_mobile"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slack_username"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>